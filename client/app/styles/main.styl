* {
    box-sizing: border-box;
}

body, html {
    height: 100%;
    padding: 0;
    margin: 0;
}

header-size = 4em;

/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.footer {
    position: fixed;
    left: 0;
    padding: 5px 10px;
    width: 100%;
    background: #eee;
    height: header-size;
}

/* Custom page header */
.header {
    top: 0;
    border-bottom: 1px solid #e5e5e5;
}

/* Custom page footer */
.footer {
    color: #777;
    border-top: 1px solid #e5e5e5;
    bottom: 0;
}

.fullscreen {
    width: 100%;
    height: 100%;
    padding: header-size 0;
}
.fill {
    width: 100%;
    height: 100%;
}